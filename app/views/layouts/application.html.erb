<!DOCTYPE html>
<html>

  <head>
    <title>TheSevenHabits</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <link rel="stylesheet" href="style.css">
  </head>



  <body>
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top ">
      <div class="container">
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if current_user&.admin?%>
              <li class="#title"><%= link_to '7つの習慣', root_path%></li>
              <li class="active"><%= link_to '習慣とは', about_path %></li>
              <li class="about"><%= link_to 'ユーザー一覧', users_path %></li>
              <li class="#ranking"><%= link_to 'ランキング', habits_path%></li>
              <li class="#logout"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <li class="#username">
                <% if user_signed_in? %>
                  <% user_name = current_user.name %>
                <% else %>
                  <% user_name = "ゲスト" %>
                <% end %>
                  <a><%= "ようこそ、#{user_name}さん" %></a>
              </li>
            <% elsif user_signed_in? %>
              <li class="#title"><%= link_to '7つの習慣', root_path%></li>
              <li class="active"><%= link_to '習慣とは', about_path %></li>
              <li class="about"><%= link_to 'ユーザー一覧', users_path %></li>
              <li class="#mypage"><%= link_to "マイページ",user_path(current_user.id) %></li>
              <li class="#ranking"><%= link_to 'ランキング', habits_path%></li>
              <li class="#logout"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <li class="#username">
                <% if user_signed_in? %>
                  <% user_name = current_user.name %>
                <% else %>
                  <% user_name = "ゲスト" %>
                <% end %>
                  <a><%= "ようこそ、#{user_name}さん" %></a>
              </li>
            <% else %>
              <li class="#title"><%= link_to '7つの習慣', root_path%></li>
              <li class="active"><%= link_to '習慣とは', about_path %></li>
              <li class="#usersindex"><%= link_to 'ユーザー一覧', users_path %></li>
              <li class="#ranking"><%= link_to 'ランキング', habits_path%></li>
              <li class="#login"><%= link_to 'ログイン', new_user_session_path%></li>
              <li class="#signup"><%= link_to '会員登録', new_user_registration_path %></li>
              <li class="#username">
                <% if user_signed_in? %>
                  <% user_name = current_user.name %>
                <% else %>
                  <% user_name = "ゲスト" %>
                <% end %>
                  <a><%= "ようこそ、#{user_name}さん"%></a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>


    <%= yield %>


      <footer class="footer">
        <p class="footer-text">CopyRight2019 Sato Products</p>
      </footer>
  </body>

</html>
